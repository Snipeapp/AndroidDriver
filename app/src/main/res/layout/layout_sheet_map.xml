<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_bottom_sheet_map"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/dimen_9dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:text="@string/sheet_map_accept_order_title"
        android:textAppearance="@style/M42Black"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_9dp"
        android:text="@string/sheet_map_stub_distance"
        android:textAppearance="@style/R26Black"
        android:textColor="@color/colorPrimary"
        />

    <ImageView
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/sheet_map_stub_client_name"
        android:textAppearance="@style/R32Black"
        android:textColor="@color/colorPrimary"
        />
</LinearLayout>