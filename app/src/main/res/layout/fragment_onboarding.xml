<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:layout_width="43dp"
        android:layout_height="33dp"
        app:srcCompat="@drawable/logo" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/onboarding_title"
        android:textColor="#ffffff"
        android:textSize="36sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="@string/onboarding_description"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="normal" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button_onboarding_sign_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/colorAccent"
        android:foreground="?selectableItemBackground"
        android:text="@string/onboarding_sign_up"
        android:textAllCaps="false"
        android:textColor="#2f445d"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button_onboarding_log_in"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/background_button"
        android:backgroundTint="#fff"
        android:foreground="?selectableItemBackground"
        android:text="@string/onboarding_log_in"
        android:textAllCaps="false"
        android:textColor="#2f445d"
        android:textSize="17sp" />
</LinearLayout>