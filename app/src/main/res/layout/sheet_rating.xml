<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="Александр"
        android:textColor="#25364a"
        android:textSize="18dp"/>

    <RatingBar
        android:id="@+id/rating_bottom_sheet_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:theme="@style/RatingBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:maxWidth="273dp"
        android:text="Оценка в 3 звезды и ниже означает, что вы не будете получать заказы от этого клиента. "
        android:textColor="#485d73"
        android:textSize="13dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="1,568 ₽"
        android:textColor="#000000"
        android:textSize="37dp"
        android:textStyle="normal"
        />

    <Button
        android:id="@+id/btn_bottom_sheet_rating_ready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_popup_button"
        android:enabled="false"
        android:fontFamily="sans-serif-medium"
        android:padding="17dp"
        android:text="Готово"
        android:textAllCaps="false"
        android:textColor="@color/sheet_rating_text_color"
        android:textSize="20dp"
        android:textStyle="normal"
        />
</LinearLayout>