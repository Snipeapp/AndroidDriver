<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_16dp"
    android:background="@drawable/bg_popup"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_popup_pic"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:tint="@color/colorAccent"
        app:srcCompat="@drawable/ic_logo"/>

    <TextView
        android:id="@+id/tv_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_48dp"
        android:layout_marginRight="@dimen/dimen_48dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:gravity="center"
        android:maxWidth="264dp"
        android:text="@string/popup_arrived_question"
        android:textAppearance="@style/M34Black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="?android:attr/dividerHeight"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@color/dividerColor"/>

    <TextView
        android:id="@+id/tv_popup_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:minHeight="@dimen/dimen_54dp"
        android:text="@string/all_arrived"
        android:textAppearance="@style/M32Black"
        android:textStyle="normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="?android:attr/dividerHeight"
        android:background="@color/dividerColor"/>

    <TextView
        android:id="@+id/tv_popup_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:minHeight="@dimen/dimen_54dp"
        android:text="@string/all_cancel"
        android:textAppearance="@style/R32Black"/>
</LinearLayout>