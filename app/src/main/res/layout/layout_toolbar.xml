<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authorization_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dimen_16dp"
        app:srcCompat="@drawable/ic_arrow_back_black"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_toEndOf="@id/toolbar_icon"
        android:layout_toLeftOf="@+id/toolbar_options"
        android:layout_toRightOf="@id/toolbar_icon"
        android:layout_toStartOf="@+id/toolbar_options"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textAppearance="@style/M40Black"/>

    <TextView
        android:id="@+id/toolbar_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dimen_16dp"
        android:textAllCaps="true"
        android:textAppearance="@style/M28Black"
        tools:text="Далее"/>

    <View
        android:id="@+id/toolbar_elevation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.8"
        android:background="@drawable/gd_toolbar_dropshadow"/>
</RelativeLayout>