<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authorization_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dimen_16dp"
        app:srcCompat="@drawable/ic_arrow_back_black"/>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dimen_16dp"
        android:layout_toEndOf="@id/toolbar_icon"
        android:layout_toRightOf="@id/toolbar_icon"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/app_name"
        android:textAppearance="@style/M40Black"/>

    <TextView
        android:id="@+id/toolbar_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/dimen_16dp"
        android:textAllCaps="true"
        android:textAppearance="@style/M28Black"
        android:visibility="invisible"
        tools:text="Далее"
        tools:visibility="visible"/>

</RelativeLayout>